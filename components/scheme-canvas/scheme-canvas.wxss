/* components/scheme-canvas/scheme-canvas.wxss */
.main{
  width: 750rpx;
  height: 550rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  border:1rpx solid red;
  box-sizing: border-box;
  position: relative;
}
.canvas-img{
  position: absolute;
  width: 550rpx;
  height: 550rpx;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
}
#crash{
  position: absolute;
  width: 550rpx;
  height: 550rpx;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
}

.crash-items{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 550rpx;
  height: 550rpx;
  border: 1px solid #f60;
}
.crash-list{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  clip-path: polygon(13.7% 0,50% 50% , 50% 0 );
  -webkit-clip-path: polygon(13.7% 0,50% 50% , 50% 0 );
  background: rgba(0, 0, 0, .3);
  overflow: hidden;
}
.crash-list-child{
  width: 500rpx;
  height: 500rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: rgba(50, 50, 50, .5);
  border-radius: 50%;
}
.crash-list-child-stop{
  content: '';
  position: absolute;
  width: 400rpx;
  height: 400rpx;
  background: red;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 50%;
  pointer-events: none;
  z-index: 100;
}
.two{
  transform: rotate(36deg);
}
.positionHidden{
  position: fixed;
  top: -10000rpx;
}